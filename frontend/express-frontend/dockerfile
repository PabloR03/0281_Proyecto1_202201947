# Usar la imagen oficial de Node.js
FROM node:18-alpine

# Establecer el directorio de trabajo en el contenedor
WORKDIR /app

# Copiar los archivos de dependencias
COPY package*.json ./

# Instalar las dependencias (sin devDependencies en producción)
RUN npm ci --only=production && npm cache clean --force

# Copiar el código de la aplicación
COPY server.js ./
COPY public/ ./public/

# Crear un usuario no-root para ejecutar la aplicación
RUN addgroup -g 1001 -S nodejs && \
    adduser -S express -u 1001 -G nodejs

# Cambiar la propiedad de los archivos al usuario
RUN chown -R express:nodejs /app
USER express

# Exponer el puerto
EXPOSE 3000

# Variables de entorno por defecto
ENV NODE_ENV=production
ENV PORT=3000
# Para conectar con nodejs-data-fetcher ejecutándose localmente
ENV NODEJS_API_URL=http://host.docker.internal:3001

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node healthcheck.js

# Comando para ejecutar la aplicación
CMD ["node", "server.js"]